FROM gradle:8.5-jdk17 AS builder
WORKDIR /app
COPY . .
RUN gradle :governance-service:shadowJar --no-daemon

FROM eclipse-temurin:17-jre
WORKDIR /app

COPY --from=builder /app/governance-service/build/libs/governance-service-*-all.jar governance-service.jar

EXPOSE 8090

ENTRYPOINT ["java", "-jar", "governance-service.jar"]
